<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/steinbrudd_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_height="100dip"
        android:layout_width="fill_parent"
        android:orientation="horizontal">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top">
            
            <TextView 
        		android:id="@+id/antall_kvarts_steinbrudd"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_gravity="right"
        		android:inputType="number"
        		android:textColor="#ffffff"
        		android:layout_alignParentRight="true"
        		android:layout_alignParentTop="true"/>
            
            <TextView 
        		android:id="@+id/antall_metallurgisk_sillisum_steinbrudd"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_gravity="right"
        		android:inputType="number"
        		android:textColor="#ffffff"
        		android:layout_alignParentRight="true"
        		android:layout_below="@id/antall_kvarts_steinbrudd"/>
            
            <TextView 
        		android:id="@+id/antall_eg_sillisum_steinbrudd"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_gravity="right"
        		android:inputType="number"
        		android:textColor="#ffffff"
        		android:layout_alignParentRight="true"
        		android:layout_below="@id/antall_metallurgisk_sillisum_steinbrudd"/>
                        
            <TextView 
        		android:id="@+id/antall_rent_sillisum_steinbrudd"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_gravity="right"
        		android:inputType="number"
        		android:textColor="#ffffff"
        		android:layout_alignParentRight="true"
        		android:layout_below="@id/antall_eg_sillisum_steinbrudd"/>
            
            <TextView 
        		android:id="@+id/level_steinbrudd"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_gravity="right"
        		android:inputType="number"
        		android:textColor="#ffffff"
        		android:layout_alignParentLeft="true"
        		android:layout_alignParentTop="true"/>
            
            <TextView 
        		android:id="@+id/antall_penger_steinbrudd"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_gravity="right"
        		android:inputType="number"
        		android:textColor="#ffffff"
        		android:layout_alignParentLeft="true"
        		android:layout_below="@id/level_steinbrudd"/>
            
            <TextView 
        		android:id="@+id/antall_hcl_steinbrudd"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_gravity="right"
        		android:inputType="number"
        		android:textColor="#ffffff"
        		android:layout_alignParentLeft="true"
        		android:layout_below="@id/antall_penger_steinbrudd"/>
            
            <TextView 
        		android:id="@+id/antall_zirkonium_steinbrudd"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_gravity="right"
        		android:inputType="number"
        		android:textColor="#ffffff"
        		android:layout_alignParentLeft="true"
        		android:layout_below="@id/antall_hcl_steinbrudd"/>
            
            <TextView 
            	android:id="@+id/timer_steinbrudd"
            	android:text="Utgravingstid: "
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:textColor="#ffffff"
            	android:layout_alignParentLeft="true"
            	android:layout_below="@id/antall_zirkonium_steinbrudd"/>
            
            <TextView 
            	android:id="@+id/tid_gaatt_steinbrudd"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:inputType="number"
            	android:textColor="#ffffff"
            	android:layout_below="@id/antall_zirkonium_steinbrudd"
            	android:layout_toRightOf="@id/timer_steinbrudd"/>
            
        </RelativeLayout>
        
    </LinearLayout>
    
    <ImageView 
        android:id="@+id/steinbrudd_image1"
        android:src="@drawable/steinbrudd"
        android:layout_width="300dip"
        android:layout_height="300dip"
        android:layout_gravity="center"
        android:onClick="diggKvarts"/>
       

</LinearLayout>












