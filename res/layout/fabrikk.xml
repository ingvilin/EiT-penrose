<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fabrikk_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <ImageView 
        android:id="@+id/fabrikk_image1"
        android:src="@drawable/silisiumfabrikken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <TextView 
            android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:text="@string/produksjon_title"
        	android:gravity="center"
        	android:layout_marginTop="5dip"
        	android:layout_marginBottom="5dip"
        	android:textSize="15dip" />
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <ImageView 
            android:id="@+id/fabrikk_image2"
            android:layout_height="0dip"
            android:layout_width="0dip"
            android:src="@drawable/oppgrader"/>
        <ImageView 
            android:id="@+id/fabrikk_image3"
            android:layout_width="0dip"
            android:layout_height="0dip"
            android:src="@drawable/forskning" />
        <Button 
            android:id="@+id/start_produksjon_elektro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_produksjon_elektro"/>
        <Button 
            android:id="@+id/start_produksjon_legering"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_produksjon_legering"/>
        <Button 
            android:id="@+id/start_produksjon_solcelle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_produksjon_solcelle"/>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <Button 
            android:id="@+id/til_steinbruddet"
            android:text="@string/til_steinbrudd"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>
        <Button 
            android:id="@+id/avslutt"
            android:text="@string/avslutt"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>/
    </LinearLayout>

</LinearLayout>