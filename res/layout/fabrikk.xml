<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fabrikk_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bakgrunn_fabrikk"
    android:orientation="vertical">

    <LinearLayout 
        android:layout_height="50dip"
        android:layout_width="fill_parent"
        android:orientation="horizontal">
        
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top">
            
            <TextView 
        android:id="@+id/antall_kvarts_fabrikk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:inputType="number"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"/>
            
            <TextView 
        android:id="@+id/antall_metallurgisk_sillisum_fabrikk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:inputType="number"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"/>
            
            <TextView 
        android:id="@+id/antall_rent_sillisum_fabrikk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:inputType="number"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"/>
            
                <TextView 
        android:id="@+id/antall_penger_fabrikk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:inputType="number"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"/>
            
            <TextView 
        android:id="@+id/level_fabrikk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:inputType="number"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>
            
            
        </RelativeLayout>
        
        
    </LinearLayout>
    
    
    
    
    
    
    
    <RelativeLayout
        android:id="@+id/relativeLayout_fabrikk"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top">
        
        <ImageView 
            android:id="@+id/ovn_level_1_frabrikk"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:src="@drawable/smelteovn_level1"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dip"/>
        
        <ImageView 
            android:id="@+id/ovn_level_2_frabrikk"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:src="@drawable/smelteovn_level2"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="25dip"/>
        
        <ImageView 
            android:id="@+id/ovn_level_3_frabrikk"
            android:layout_width="200dip"
            android:layout_height="100dip"
            android:src="@drawable/smelteovn_level3"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="25dip"/>
        
    </RelativeLayout>
    
    
</LinearLayout>


