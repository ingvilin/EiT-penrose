<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fabrikk_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bakgrunn_fabrikk"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="118dp"
            android:layout_gravity="top"
            android:layout_margin="5dip" >

            <TextView
                android:id="@+id/antall_kvarts_fabrikk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="right"
                android:inputType="number"
                android:textColor="#ffffff"
                 />

            <TextView
                android:id="@+id/antall_metallurgisk_sillisum_fabrikk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/antall_kvarts_fabrikk"
                android:layout_gravity="right"
                android:inputType="number"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/antall_eg_sillisum_fabrikk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/antall_metallurgisk_sillisum_fabrikk"
                android:layout_gravity="right"
                android:inputType="number"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/antall_rent_sillisum_fabrikk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/antall_eg_sillisum_fabrikk"
                android:layout_gravity="right"
                android:inputType="number"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/level_fabrikk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="right"
                android:inputType="number"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/antall_penger_fabrikk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/level_fabrikk"
                android:layout_gravity="right"
                android:inputType="number"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/timer_fabrikk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/antall_penger_fabrikk"
                android:text="Utvinningstid: "
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/utvinningstid_fabrikk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/antall_penger_fabrikk"
                android:layout_toRightOf="@id/timer_fabrikk"
                android:inputType="number"
                android:textColor="#ffffff" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout_fabrikk"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:layout_margin="5dip" >

        <ImageView
            android:id="@+id/ovn_level_3_frabrikk"
            android:layout_width="150dip"
            android:layout_height="150dip"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/ovn_a" />

        <ImageView
            android:id="@+id/ovn_level_2_frabrikk"
            android:layout_width="150dip"
            android:layout_height="149dip"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ovn" />

        <ImageView
            android:id="@+id/ovn_level_1_frabrikk"
            android:layout_width="150dip"
            android:layout_height="150dip"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="18dp"
            android:layout_toLeftOf="@+id/ovn_level_2_frabrikk"
            android:src="@drawable/ovn_a" />

    </RelativeLayout>

</LinearLayout>