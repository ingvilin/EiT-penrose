<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
	
    <TextView
        android:id="@+id/pengerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forskningssenteret"
        android:layout_gravity="center"
        android:textSize="30dip"
        android:layout_marginTop="15dip"
        android:layout_marginBottom="15dip"
        android:inputType="number" />
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="20dip"
     	android:orientation="vertical">
     	
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top">
            
            <TextView 
                android:id="@+id/level_forskning"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
    		    android:layout_height="wrap_content"  />
            
            <TextView 
                android:id="@+id/penger_forskning"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
   			    android:layout_height="wrap_content" />
            
        </RelativeLayout>
        
    </LinearLayout>
    
    <Button 
        android:id="@+id/trivia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="15dip"
        android:text="Trivia"
        android:onClick="startTrivia" />
    
    <Button 
        android:id="@+id/donere"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:text="Donere til forskning"
        android:onClick="startDonasjon" />
    
    <Button 
        android:id="@+id/presentasjon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:text="Jukseknapp til presentasjon"
        android:onClick="startJuks" />
    
</LinearLayout>